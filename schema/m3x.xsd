                            <xs:element ref="int_array" minOccurs="1" maxOccurs="1"/>
                        </xs:choice>
                    </xs:sequence>
                    <xs:attribute name="componentCount" type="uint"/>
                    <xs:attribute name="componentType" default="FLOAT" type="VertexArrayDataType"/>
